import React, { useState } from 'react';
import ProviderManager from './ProviderManager';
import VMBrowser from './VMBrowser';
import { JobSubmissionForm } from './JobSubmissionForm';

type WorkflowStep = 'providers' | 'vms' | 'export';

interface VM {
  id: string;
  name: string;
  provider: string;
  status: string;
  [key: string]: any;
}

const ExportWorkflow: React.FC = () => {
  const [currentStep, setCurrentStep] = useState<WorkflowStep>('providers');
  const [selectedProvider, setSelectedProvider] = useState<string>('');
  const [selectedVM, setSelectedVM] = useState<VM | null>(null);

  const handleProviderSelect = (provider: string) => {
    setSelectedProvider(provider);
    setCurrentStep('vms');
  };

  const handleVMSelect = (vm: VM) => {
    setSelectedVM(vm);
    setCurrentStep('export');
  };

  const handleBackToProviders = () => {
    setCurrentStep('providers');
    setSelectedProvider('');
    setSelectedVM(null);
  };

  const handleBackToVMs = () => {
    setCurrentStep('vms');
    setSelectedVM(null);
  };

  const renderProgressIndicator = () => (
    <div style={styles.progressContainer}>
      <div style={styles.progressSteps}>
        {/* Step 1: Select Provider */}
        <div style={styles.progressStep}>
          <div style={{
            ...styles.progressCircle,
            ...(currentStep === 'providers' ? styles.progressCircleActive : {}),
            ...(currentStep !== 'providers' && selectedProvider ? styles.progressCircleCompleted : {})
          }}>
            {currentStep !== 'providers' && selectedProvider ? '‚úì' : '1'}
          </div>
          <div style={styles.progressLabel}>Select Provider</div>
          {selectedProvider && (
            <div style={styles.progressValue}>{selectedProvider.toUpperCase()}</div>
          )}
        </div>

        {/* Progress Line */}
        <div style={{
          ...styles.progressLine,
          ...(selectedProvider ? styles.progressLineCompleted : {})
        }} />

        {/* Step 2: Select VM */}
        <div style={styles.progressStep}>
          <div style={{
            ...styles.progressCircle,
            ...(currentStep === 'vms' ? styles.progressCircleActive : {}),
            ...(currentStep === 'export' && selectedVM ? styles.progressCircleCompleted : {}),
            ...(!selectedProvider ? styles.progressCircleDisabled : {})
          }}>
            {currentStep === 'export' && selectedVM ? '‚úì' : '2'}
          </div>
          <div style={styles.progressLabel}>Select VM</div>
          {selectedVM && (
            <div style={styles.progressValue}>{selectedVM.name}</div>
          )}
        </div>

        {/* Progress Line */}
        <div style={{
          ...styles.progressLine,
          ...(selectedVM ? styles.progressLineCompleted : {})
        }} />

        {/* Step 3: Configure Export */}
        <div style={styles.progressStep}>
          <div style={{
            ...styles.progressCircle,
            ...(currentStep === 'export' ? styles.progressCircleActive : {}),
            ...(!selectedVM ? styles.progressCircleDisabled : {})
          }}>
            3
          </div>
          <div style={styles.progressLabel}>Configure Export</div>
        </div>
      </div>
    </div>
  );

  const renderBreadcrumb = () => (
    <div style={styles.breadcrumb}>
      <span
        style={{
          ...styles.breadcrumbItem,
          ...(currentStep === 'providers' ? styles.breadcrumbItemActive : styles.breadcrumbItemClickable)
        }}
        onClick={currentStep !== 'providers' ? handleBackToProviders : undefined}
      >
        üîå Providers
      </span>
      {selectedProvider && (
        <>
          <span style={styles.breadcrumbSeparator}>/</span>
          <span
            style={{
              ...styles.breadcrumbItem,
              ...(currentStep === 'vms' ? styles.breadcrumbItemActive : styles.breadcrumbItemClickable)
            }}
            onClick={currentStep === 'export' ? handleBackToVMs : undefined}
          >
            üìÇ {selectedProvider.toUpperCase()} VMs
          </span>
        </>
      )}
      {selectedVM && (
        <>
          <span style={styles.breadcrumbSeparator}>/</span>
          <span style={{...styles.breadcrumbItem, ...styles.breadcrumbItemActive}}>
            ‚öôÔ∏è Export {selectedVM.name}
          </span>
        </>
      )}
    </div>
  );

  return (
    <div style={styles.container}>
      {/* Header */}
      <div style={styles.header}>
        <h1 style={styles.title}>VM Export Workflow</h1>
        <p style={styles.subtitle}>
          Export virtual machines from cloud providers to local or remote storage
        </p>
      </div>

      {/* Progress Indicator */}
      {renderProgressIndicator()}

      {/* Breadcrumb Navigation */}
      {renderBreadcrumb()}

      {/* Step Content */}
      <div style={styles.content}>
        {currentStep === 'providers' && (
          <div style={styles.stepContainer}>
            <div style={styles.stepHeader}>
              <h2 style={styles.stepTitle}>Step 1: Select Cloud Provider</h2>
              <p style={styles.stepDescription}>
                Configure and connect to your cloud provider to begin discovering virtual machines.
              </p>
            </div>
            <ProviderManager onProviderSelect={handleProviderSelect} />
          </div>
        )}

        {currentStep === 'vms' && selectedProvider && (
          <div style={styles.stepContainer}>
            <div style={styles.stepHeader}>
              <h2 style={styles.stepTitle}>Step 2: Discover and Select VM</h2>
              <p style={styles.stepDescription}>
                Browse available virtual machines from {selectedProvider.toUpperCase()} and select one to export.
              </p>
              <button onClick={handleBackToProviders} style={styles.backButton}>
                ‚Üê Back to Providers
              </button>
            </div>
            <VMBrowser
              provider={selectedProvider}
              onVMSelect={handleVMSelect}
              autoDiscoverOnMount={true}
            />
          </div>
        )}

        {currentStep === 'export' && selectedVM && (
          <div style={styles.stepContainer}>
            <div style={styles.stepHeader}>
              <h2 style={styles.stepTitle}>Step 3: Configure Export Options</h2>
              <p style={styles.stepDescription}>
                Configure export settings for {selectedVM.name} from {selectedProvider.toUpperCase()}.
              </p>
              <div style={styles.backButtonGroup}>
                <button onClick={handleBackToVMs} style={styles.backButton}>
                  ‚Üê Back to VMs
                </button>
                <button onClick={handleBackToProviders} style={styles.backButton}>
                  ‚Üê Back to Providers
                </button>
              </div>
            </div>

            {/* Selected VM Summary */}
            <div style={styles.vmSummary}>
              <h3 style={styles.vmSummaryTitle}>Selected Virtual Machine</h3>
              <div style={styles.vmSummaryGrid}>
                <div style={styles.vmSummaryItem}>
                  <span style={styles.vmSummaryLabel}>Name:</span>
                  <span style={styles.vmSummaryValue}>{selectedVM.name}</span>
                </div>
                <div style={styles.vmSummaryItem}>
                  <span style={styles.vmSummaryLabel}>ID:</span>
                  <span style={styles.vmSummaryValue}>{selectedVM.id}</span>
                </div>
                <div style={styles.vmSummaryItem}>
                  <span style={styles.vmSummaryLabel}>Provider:</span>
                  <span style={styles.vmSummaryValue}>{selectedVM.provider}</span>
                </div>
                <div style={styles.vmSummaryItem}>
                  <span style={styles.vmSummaryLabel}>Status:</span>
                  <span style={styles.vmSummaryValue}>{selectedVM.status || selectedVM.power_state}</span>
                </div>
                {selectedVM.cpu_count && (
                  <div style={styles.vmSummaryItem}>
                    <span style={styles.vmSummaryLabel}>CPU:</span>
                    <span style={styles.vmSummaryValue}>{selectedVM.cpu_count} vCPU</span>
                  </div>
                )}
                {selectedVM.memory_mb && (
                  <div style={styles.vmSummaryItem}>
                    <span style={styles.vmSummaryLabel}>Memory:</span>
                    <span style={styles.vmSummaryValue}>{(selectedVM.memory_mb / 1024).toFixed(1)} GB</span>
                  </div>
                )}
              </div>
            </div>

            {/* Job Submission Form with pre-filled values */}
            <JobSubmissionForm
              initialProvider={selectedProvider}
              initialVMIdentifier={selectedVM.id}
              initialVMName={selectedVM.name}
            />
          </div>
        )}
      </div>

      {/* Help Section */}
      <div style={styles.helpSection}>
        <h3 style={styles.helpTitle}>‚ÑπÔ∏è Need Help?</h3>
        <div style={styles.helpContent}>
          {currentStep === 'providers' && (
            <ul style={styles.helpList}>
              <li>Click "Add Provider" to configure a new cloud provider connection</li>
              <li>Test your connection to verify credentials are correct</li>
              <li>Once connected, click "Browse VMs" to discover virtual machines</li>
              <li>Supported providers: vSphere, AWS, Azure, GCP, Hyper-V, OCI, OpenStack, Alibaba Cloud, Proxmox</li>
            </ul>
          )}
          {currentStep === 'vms' && (
            <ul style={styles.helpList}>
              <li>Use the search box to filter VMs by name or ID</li>
              <li>Filter by power state to find running or stopped VMs</li>
              <li>Click "Refresh VMs" to discover newly created or deleted VMs</li>
              <li>Select a VM from the table to proceed with export configuration</li>
            </ul>
          )}
          {currentStep === 'export' && (
            <ul style={styles.helpList}>
              <li>Choose export format: OVA, OVF, VMDK, or provider-specific formats</li>
              <li>Enable compression to reduce export file size</li>
              <li>Configure hyper2kvm integration for automatic conversion to KVM format</li>
              <li>Monitor export progress in the Jobs dashboard after submission</li>
            </ul>
          )}
        </div>
      </div>
    </div>
  );
};

